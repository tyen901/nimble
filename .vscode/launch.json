    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GUI",
            "cargo": {
                "args": ["build", "--bin=nimble-gui", "--package=nimble"],
                "filter": {
                    "name": "nimble-gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI",
            "cargo": {
                "args": ["build", "--bin=nimble", "--package=nimble"],
                "filter": {
                    "name": "nimble",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release GUI",
            "cargo": {
                "args": ["build", "--release", "--bin=nimble-gui", "--package=nimble"],
                "filter": {
                    "name": "nimble-gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release CLI",
            "cargo": {
                "args": ["build", "--release", "--bin=nimble", "--package=nimble"],
                "filter": {
                    "name": "nimble",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}